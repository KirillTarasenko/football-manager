{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "skipLibCheck": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "module": "commonjs",
    "target": "esnext",
    // "noImplicitReturns": true,
    // "noUnusedParameters": true,
    // "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "types": ["node", "jest"]
  },
  "includes": ["src/*"],
  "exclude": [
    "e2e/**/*.ts",
    "/node_modules/*",
    "**/node_modules/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
